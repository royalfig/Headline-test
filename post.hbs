{{!< default}}

<main class="gh-main">
    {{#post}}
        <article class="gh-article {{post_class}}">

                                {{^if @member.paid}}
                         <div id="ad" style="width: auto; min-height: 250px; text-align: center; margin: var(--gap) auto var(--gap) auto;">
                         <p style="font-size: 1.4rem; color: var(--color-secondary-text);">ADVERTISEMENT</p>
                         <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6412983364226137" crossorigin="anonymous"></script>
                         <!-- Furrimals - display ad -->
                         <ins class="adsbygoogle" style="display:inline-block;width:300px;height:250px" data-ad-client="ca-pub-6412983364226137" data-ad-slot="8994598705"></ins>
                         <script>
                         (adsbygoogle = window.adsbygoogle || []).push({});
                         </script>
                         </div>
                    {{/if}}

            <header class="gh-article-header gh-canvas">
                {{#if primary_tag}}
                    <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                {{/if}}

                <h1 class="gh-article-title">{{title}}</h1>

                {{> "post-meta"}}

                {{#if custom_excerpt}}
                    <p class="gh-article-excerpt">{{custom_excerpt}}</p>
                {{/if}}

                {{> "feature-image"}}
            </header>

            <section class="gh-content gh-canvas">

                <aside class="gh-sidebar"><div class="gh-toc"></div></aside> {{! The TOC will be inserted here }}

                        {{^if @member.paid}}
