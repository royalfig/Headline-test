                         <script>
                         (adsbygoogle = window.adsbygoogle || []).push({});
                         </script>
                         </div>
                    {{/if}}

            </section>

        </article>
    {{/post}}

    {{> "related-posts"}}

    {{#post}}
        {{> "comments"}}
    {{/post}}
</main>